{
  "name": "auto-resume",
  "version": "1.2.0",
  "description": "Automatically resume Claude Code sessions when rate limits reset",
  "author": {
    "name": "Muminur",
    "email": "muminur@example.com"
  },
  "hooks": {
    "SessionStart": [
      {
        "command": ["node", "${CLAUDE_PLUGIN_ROOT}/scripts/ensure-daemon-running.js"],
        "timeout": 5000
      }
    ],
    "Stop": [
      {
        "command": ["node", "${CLAUDE_PLUGIN_ROOT}/hooks/rate-limit-hook.js"],
        "timeout": 10000
      }
    ]
  }
}
