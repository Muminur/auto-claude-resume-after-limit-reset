{
  "description": "Auto-resume hook that detects rate limits and schedules automatic session resume",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/rate-limit-hook.js\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
